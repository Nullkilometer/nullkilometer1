<%= simple_form_for(@point_of_interest) do |f| %>

  <div class="form-inputs">
	  <%= f.input :name %>
	  <%= f.input :address %>
	  <%= f.input :website %>
	  <%= f.input :mail %>
	  <%= f.input :phone %>
	  <%= f.input :cell_phone %>
	  <%= f.input :description, :as => :text,  :input_html => { :rows => "10" } %>
  </div>

  <%= f.button :submit %>

<% end %>
