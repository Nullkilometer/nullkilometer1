<%= simple_form_for(@market_stall) do |f| %>
  <div class="form-inputs">
	  <%= f.input :name, input_html: { class: "formTextInput" } %>

	  <% if @parent_market.nil? %>
	 	 <%= f.input :point_of_sale_id, label: I18n.t("instructions.add_a_pos.parent_market_name"), input_html: { class: "formTextInput" } %>
	  <% else %>
	  	<label><%= I18n.t("instructions.add_a_pos.parent_market_name") %></label>
	  	<p><%= link_to @parent_market.name, "/point_of_sales/#{@parent_market.id}.html" %></p> 

	  	<%= f.input :point_of_sale_id, input_html: { class: "formTextInput" } , input_html: { value: @parent_market.id }, as: 'hidden' %>
	  <% end %>

	  <%= f.input :productCategoryIds, collection: @product_categories_collection, as: :check_boxes %>
	  <%= f.input :phone, input_html: { class: "formTextInput" } %>
	  <%= f.input :cell_phone, input_html: { class: "formTextInput" } %>
	  <%= f.input :mail, input_html: { class: "formTextInput" } %>
	  <%= f.input :website, input_html: { class: "formTextInput" } %>
	  <%= f.input :description, :as => :text,  :input_html => { :rows => "10" } %>
  </div>
  <%= f.button :submit, value: I18n.t("button.save_changes") %>
<% end %>

<% if locals[:parent]== "edit" %>
  <%= button_to I18n.t("button.delete_market_stall"), @market_stall, class: 'btn', method: :delete, data: { confirm: I18n.t("instructions.add_a_pos.confirm_delete_market_stall") } %>
<% end %>
