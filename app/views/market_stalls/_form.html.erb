<% content_for :javascript_includes do %>
    <%= javascript_include_tag "market_stalls/form.js" %>
    <%= javascript_include_tag "jquery.validate.js" %>
<% end %>
<%= simple_form_for(@market_stall) do |f| %>
  <div class="form-inputs">
	  <%= f.input :name, label: "#{I18n.t("properties.main_information.name")}:", input_html: { class: "formTextInput" } %>

	  <% if @parent_market.nil? %>
	 	 <%= f.input :point_of_sale_id, label: I18n.t("instructions.add_a_pos.parent_market_name"), input_html: { class: "formTextInput" } %>
	  <% else %>
	  	<label><%= I18n.t("instructions.add_a_pos.parent_market_name") %></label>
	  	<p><%= link_to @parent_market.name, "/point_of_sales/#{@parent_market.id}.html", class: "ordinaryLink" %></p> 

	  	<%= f.input :point_of_sale_id, input_html: { class: "formTextInput" } , input_html: { value: @parent_market.id }, as: 'hidden' %>
	  <% end %>

	  <%= f.input :productCategoryIds,  label: "#{I18n.t("properties.main_information.product_categories")}:", collection: @product_categories_collection, as: :check_boxes %>
	  <%= f.input :phone, label: "#{I18n.t("properties.additional_information.phone")}:", input_html: { class: "formTextInput" } %>
	  <%= f.input :cell_phone, label: "#{I18n.t("properties.additional_information.cell_phone")}:", input_html: { class: "formTextInput" } %>
	  <%= f.input :mail, label: "#{I18n.t("properties.additional_information.email")}:", input_html: { class: "formTextInput" } %>
	  <%= f.input :website, label: "#{I18n.t("properties.additional_information.website")}:", input_html: { class: "formTextInput" } %>
	  <%= f.input :description, label: "#{I18n.t("properties.additional_information.description")}:", :as => :text,  :input_html => { :rows => "10" } %>
  </div>
  <%= f.button :submit, value: I18n.t("button.save_changes"), data: { confirm: I18n.t("instructions.add_a_pos.confirm_edit") } %>
<% end %>

<% if locals[:parent]== "edit" %>
  <%= button_to I18n.t("button.delete_market_stall"), @market_stall, class: 'btn', method: :delete, data: { confirm: I18n.t("instructions.add_a_pos.confirm_delete_market_stall") } %>
<% end %>
