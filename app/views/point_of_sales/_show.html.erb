<% content_for :javascript_includes do %>
    <%= javascript_include_tag "point_of_interests/show.js" %>
    <%= javascript_include_tag "point_of_interests/profile_page_map.js" %>
    <%= javascript_include_tag "bootstrap-rating-input.min.js" %>
<% end %>

<div class="infoDiv profileWrapper"><!-- id="profilePageWrapper">-->
	<div class="row">
		<div class="col-md-12">
			<h1><%= @point_of_interest.name %></h1>			
		</div>
		<div class="col-md-12">
			<div class="col-md-10" >
				<%= I18n.t("point_of_sale.pos_type_names")[@point_of_interest.posTypeId] %>
			</div>
			<div  id="editPosLinkWrapper" class="col-md-2">
				<%= link_to I18n.t("links.global.edit"), :edit_point_of_sale, class: 'ordinaryLink', 
				 	data: { :no_turbolink => true }  %>
			</div>
		</div>
	</div>
	<!--TODO: remove? <div class="profileContainer row" id="profilePageContainer">-->
	<div class="row" >
		<div class="col-sm-12 col-md-6 col-lg-6">
			<%= render 'point_of_sales/posInfoList' %>
		</div>
		<div class="col-sm-12 col-md-6 col-lg-6">
			<div class="row">
				<div id="image_wrapper" class="col-md-12" >
					<%= image_tag( @point_of_interest.detail_info.image_url, class: "img-responsive center-block") if @point_of_interest.detail_info.image? %> <!--@point_of_interest.detail_info.image_url if @point_of_interest.detail_info.image? %>-->
				</div>
				<div class="col-md-12">
					<div id="profilePagePosMap">Map can be displayed only if JavaScript is enabled.</div>
				</div>
			</div>
			
		</div>
	</div>
	<div class="row">
		<% if @point_of_interest.pos_type == 0 && @point_of_interest.market_stalls.size > 0 %>
			<%= render partial: 'market_stalls/index', locals: { market_stalls: @point_of_interest.market_stalls } %>
			<!-- TODO: partial Rate -->
		<!--	<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
				<h4>
					Locality degree
				</h4>
				<p>Rate the "locality" of the place:</p>
				<i class='glyphicon glyphicon-star'></i><i class='glyphicon glyphicon-star'></i><i class='glyphicon glyphicon-star'></i><i class='glyphicon glyphicon-star-empty'></i><i class='glyphicon glyphicon-star-empty'></i>
			</div>-->
		
		<% end %>
	</div>
</div>