<%= simple_form_for(@point_of_interest) do |f| %>

  <div class="form-inputs">
	  <%= f.input :name, input_html: { class: "formTextInput" } %>
	  <%= f.input :address, input_html: { class: "formTextInput" } %>
	  <%= f.input :posTypeId, collection: @pos_types_collection, as: :select, prompt: I18n.t("instructions.add_a_pos.select_pos_type") %>
	  <% #= f.association :trainers, :collection => Trainer.all, :as => :check_boxes %>
	  <%#= debug  PointOfSale::POS_TYPE_NAMES.each_with_index.map{|name, index| [name, index]}%>
	  <!-- TODO: add email, phone, cell phone-->
	  <%= f.input :productCategoryIds, collection: @product_categories_collection, as: :check_boxes %>
	  <%= f.input :phone, input_html: { class: "formTextInput" } %>
	  <%= f.input :cell_phone, input_html: { class: "formTextInput" } %>
	  <%= f.input :mail, input_html: { class: "formTextInput" } %>
	  <%= f.input :website, input_html: { class: "formTextInput" } %>
	  <%= f.input :description, :as => :text,  :input_html => { :rows => "10" } %>

	  <ul id = "openingTimesContainer">
		  <%= f.simple_fields_for :opening_times do |ot| %>
		  	<li class = "openingDayContainer">
		  		<%= ot.input :dayId, label: false, as: :boolean, inline_label: I18n.t("date.day_names")[ot.object.dayId], checked_value: ot.object.dayId,
		  		 include_hidden: :false, unchecked_value: nil, input_html: { id: ot.object.dayId, style: "display: none"} %>
		  		<%= ot.input :from, placeholder: "00:00", input_html: { id: ot.object.dayId, class: "formTextInput timeTextInput"} %>
		  		<%= ot.input :to, placeholder: "00:00", input_html: { id: ot.object.dayId, class: "formTextInput timeTextInput"} %>
	  		</li>
	  	  <% end %>
  	  </ul>
  </div>

  <%= f.button :submit %>

<% end %>
