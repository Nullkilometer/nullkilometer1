<%= simple_form_for(@point_of_sale) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :lat %>
    <%= f.input :lon %>
    <%= f.simple_fields_for :products do |sa| %>
      <%= sa.input :category %>
    <% end %>
    <%= f.input :shop_type %>
    <%= f.simple_fields_for :opening_times do |ot| %>
      <%= ot.input :from %>
      <%= ot.input :to %>
      <%= ot.input :day %>
    <% end %>
    <%= f.input :description %>
    <%= f.input :mail %>
    <%= f.input :phone %>
    <%= f.input :website %>
    <%= f.simple_fields_for :market_stalls do |ms| %>
      <%= ms.input :name %>
      <%= ms.input :description %>
      <%= ms.input :mail %>
      <%= ms.input :phone %>
      <%= ms.input :website %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
