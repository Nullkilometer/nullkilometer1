<%= simple_form_for(@point_of_sale) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :lat %>
    <%= f.input :lon %>
    <%= f.simple_fields_for :product_assignments do |pa| %>
      <%= pa.input :product_category %>
    <% end %>
    <%= f.input :shop_type %>
    <%= f.simple_fields_for :opening_times do |ot| %>
      <%= ot.input :from %>
      <%= ot.input :to %>
      <%= ot.input :day %>
    <% end %>
    <%= f.input :description %>
    <%= f.input :mail %>
    <%= f.input :phone %>
    <%= f.input :website %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
