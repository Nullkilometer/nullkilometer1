<%= simple_form_for(@point_of_interest) do |f| %>

  <div class="form-inputs">
	  <%= f.input :name %>
	  <%= f.input :address %>
	  <%= f.input :posTypeId, collection: @pos_types_collection, as: :select, prompt: I18n.t("instructions.add_a_pos.select_pos_type") %>
	  <% #= f.association :trainers, :collection => Trainer.all, :as => :check_boxes %>
	  <%#= debug  PointOfSale::POS_TYPE_NAMES.each_with_index.map{|name, index| [name, index]}%>
	  <%= f.input :productCategoryIds, collection: @product_categories_collection, as: :check_boxes %>
	  <%= f.input :description, :as => :text,  :input_html => { :rows => "10" } %>
  </div>

  <%= f.button :submit %>

<% end %>
