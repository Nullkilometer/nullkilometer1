<div class="row bordered productCategories">
    <%= render :partial => "point_of_sales/productCategoryImages", :locals => {:seller => @point_of_interest} %>
</div>
<div class="row bordered address">
    <address property="address:streetAddress"><%= @point_of_interest.address %></address>
</div>
<div class="row bordered">
	<ul>
    	<% @point_of_interest.opening_times.each do |day| %>
    		<li>
    			<span class="openingTimeDay"><%= I18n.t("date.day_names")[day.dayId] %></span >
    			<%= day.from + " - " + day.to %>
    		</li>
    	<% end %>
	</ul>
</div> 
<div class="row bordered website"><a class="ordinaryLink" href=<%= @point_of_interest.detail_info.website %>><%= @point_of_interest.detail_info.website %></a></div>
<div class="row bordered">
    <div class="mail"><%= @point_of_interest.detail_info.mail %></div>
    <div class="phone"><%= @point_of_interest.detail_info.phone %></div>
    <div class="cellphone"><%= @point_of_interest.detail_info.cell_phone %></div>
</div>
<div class="row description"><%=  @point_of_interest.detail_info.description %></div>
