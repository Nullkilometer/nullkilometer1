<div class="infoDiv formWrapper">
  <h1><%= I18n.t("devise.commands.register")%></h1>

	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

	  <div class="form-inputs">
	    <%= f.input :email, label: "#{I18n.t("devise.custom.main_information.email")}:", :required => true, :autofocus => true, input_html: { class: "form-control"},  wrapper_html: { class: "form-group" } %>
	    <%= f.input :password, label: "#{I18n.t("devise.custom.main_information.password")}:", :required => true, input_html: { class: "form-control"},  wrapper_html: { class: "form-group" } %>
	    <%= f.input :password_confirmation, label: "#{I18n.t("devise.custom.passwords.confirm")}:", :required => true, input_html: { class: "form-control"},  wrapper_html: { class: "form-group" } %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, I18n.t("devise.commands.register"), :class=>'btn btn-success' %>
	  </div>



	<% end %>

	<%= render "devise/shared/links" %>
</div>
