<div class="infoDiv formWrapper">
  <h1><%= I18n.t("headers.edit_admin_account")%></h1>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

    <div class="form-inputs">
      <%= f.input :email, label: "#{I18n.t("devise.custom.main_information.email")}:", :required => true, :autofocus => true, input_html: { class: "form-control"},  wrapper_html: { class: "form-group" } %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,  label: "#{I18n.t("devise.custom.passwords.new_password")}:", :autocomplete => "off", :hint => I18n.t("devise.custom.registrations.leave_blank"), :required => false, input_html: { class: "form-control"}, wrapper_html: { class: "form-group" }  %>
      <%= f.input :password_confirmation,  label: "#{I18n.t("devise.custom.passwords.confirm")}:", :required => false, input_html: { class: "form-control"}, wrapper_html: { class: "form-group" }  %>
      <%= f.input :current_password,  label: "#{I18n.t("devise.custom.passwords.current_password")}:", :hint => I18n.t("devise.custom.registrations.need_password_to_confirm"), :required => true, input_html: { class: "form-control"}, wrapper_html: { class: "form-group" }  %>
    </div>

    <%= f.button :button, data: { confirm: I18n.t("instructions.confirm_edit")}, class: "btn-success" do %>
        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
        <%= I18n.t("button.save_changes") %>
    <% end %>

  <% end %>

  <%= button_to(registration_path(resource_name), type: 'button', class: "btn btn-danger", method: :delete, :data => { :confirm => I18n.t("devise.custom.registrations.are_you_sure")}) do %>
    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    <%= I18n.t("devise.custom.registrations.cancel_account") %>
  <% end %>

  <%= button_to(:back, type: 'button', class: "btn btn-default", method: :get) do %>
    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
    <%= I18n.t("button.back") %>
  <% end %>

</div>